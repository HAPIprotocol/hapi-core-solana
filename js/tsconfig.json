{
    "compilerOptions": {
        "target": "es2018",
        "module": "esnext",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "lib": [
            "es2017"
        ],
        "declaration": true,
        "sourceMap": true,
        "removeComments": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "out-tsc",
        "rootDir": "./"
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "./**/*.spec.ts"
    ]
}